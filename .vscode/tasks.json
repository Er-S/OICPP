{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "CppBuild03",
			"type": "shell",
			"command": "g++",
			"args": [
				"-std=c++03",
				"${fileDirname}/${fileBasenameNoExtension}.cpp",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}.exe"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "CleanupEXE",
			"type": "shell",
			"command": "Remove-Item",
			"args": [
				"-LiteralPath",
				"${fileDirname}/${fileBasenameNoExtension}.exe"
			]
		},
		{
			"label": "WorkspaceCleanup",
			"type": "shell",
			"command": "Remove-Item",
			"args": [
				"*",
				"-Include",
				"*.exe",
				"-Recurse"
			]
		},{
			"label": "CppBuild11",
			"type": "shell",
			"command": "g++",
			"args": [
				"-std=c++11",
				"${fileDirname}/${fileBasenameNoExtension}.cpp",
				"-o",
				"${fileDirname}/${fileBasenameNoExtension}.exe"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}